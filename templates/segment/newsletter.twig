<hr>
  <p class="font-weight-bold dark-grey-text text-center spacing">
    <strong>NEWSLETTER</strong>
  </p>
<hr>



<!-- Newsletter -->
<section class="mb-5">

  {% macro errorList(errors) %}
    {% if errors %}
      <ul class="errors">
        {% for error in errors %}
          <li>{{ error }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endmacro %}

  {% set entry = entry ?? create('craft\\elements\\Entry') %}

  <!-- Grid row -->
  <div class="row mt-4">

  <!-- Grid column -->
  <form class="col-md-12" method="post">
    {{ csrfInput() }}
    {{ actionInput('entries/save-entry') }}
    {{ redirectInput('..') }}
    {{ hiddenInput('sectionId', '18') }}
    {{ hiddenInput('enabled', '1') }}

    {% macro errorList(errors) %}
      {% if errors %}
        <ul class="errors">
          {% for error in errors %}
            <li>{{ error }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endmacro %}
    {% from _self import errorList %}

    {% set form = wheelform.form({id: 2,}) %}

    {{ form.open() }}
    {{ wheelformErrors['form'] is defined ? errorList(wheelformErrors['form']) }}
    <div class="row">
      <!-- Grid row -->
      {% for field in form.fields %}
            <div class="col-md-12">
              <div class="md-form mb-0">
                <input type="email" id="form-contact-message" class="form-control mt-0 black-border rgba-white-strong" rows="1" name="{{field.name}}">
                <label for="form-contact-message">{{field.label}}</label>
                <button type="submit" class="btn btn-grey btn-block mt-4">{{layout.signUpLabel}}</button>
              </div>
      {% endfor %}


  </form>
  <!-- Grid column -->

  </div>
  <!-- Grid row -->

</section>
<!-- Newsletter -->
